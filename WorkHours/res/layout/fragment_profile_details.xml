<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
   	android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:rowCount="14" >
    
    <TextView
        android:id="@+id/profile_title"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:text="@string/profile_title"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/profileNameLabel"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/profile_name_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_column="0"
        android:layout_row="2"
        android:ems="10" >
    </TextView>

    <TextView
        android:id="@+id/profile_email_label"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/profile_email_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_column="0"
        android:layout_row="4"
        android:ems="10" >
    </TextView>

    <TextView
        android:id="@+id/employer_email_label"
        android:layout_column="0"
        android:layout_row="5"
        android:text="@string/employer_email_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/employer_email"
        android:layout_column="0"
        android:layout_row="6" />

    <TextView
        android:id="@+id/hourly_wage_label"
        android:layout_column="0"
        android:layout_row="7"
        android:text="@string/hourly_wage_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/hourly_wage"
        android:layout_column="0"
        android:layout_row="8" />

    <TextView
        android:id="@+id/tax_label"
        android:layout_column="0"
        android:layout_row="9"
        android:text="@string/tax_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tax"
        android:layout_column="0"
        android:layout_row="10"/>
    
    <TextView
        android:id="@+id/schedule_due_date_label"
        android:text="@string/schedule_due"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_column="0"
        android:layout_row="11"/>
    
    <TextView
        android:id="@+id/schedule_due_date"
        android:layout_column="0"
        android:layout_row="12"/>
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_gravity="fill_vertical"
        android:gravity="bottom"
        android:orientation="horizontal" >
    
		<View android:layout_height="0dp"
    		android:layout_width="0dp"
    		android:layout_weight="20" />
   		<Button
        	android:id="@+id/button_change_details"
        	android:layout_width="0dp"
    		android:layout_weight="60"
    		android:layout_height="wrap_content"
        	android:onClick="changeDetails"
        	android:text="@string/button_change_details" />
   		<View android:layout_height="0dp"  
    		android:layout_width="0dp"
    		android:layout_weight="20" />
   
	</LinearLayout>
    
</GridLayout>